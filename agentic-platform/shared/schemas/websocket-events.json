{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WebSocket Events",
  "description": "Schema for WebSocket event messages",
  "type": "object",
  "properties": {
    "event": {
      "type": "string",
      "description": "Event type"
    },
    "data": {
      "type": "object",
      "description": "Event payload"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event timestamp"
    }
  },
  "required": ["event", "data"]
}
